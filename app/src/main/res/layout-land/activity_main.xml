<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_horizontalLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="165dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/id_squareButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="x^2"
            android:textSize="16sp"
            android:background="@drawable/round_button_dark_gray" />

        <Button
            android:id="@+id/id_sinButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="sin"
            android:textSize="16sp"
            android:background="@drawable/round_button_dark_gray" />

        <Button
            android:id="@+id/id_piButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="π"
            android:textSize="16sp"
            android:background="@drawable/round_button_dark_gray" />

        <Button
            android:id="@+id/id_oneButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="1"
            android:textSize="24sp"
            android:background="@drawable/round_button"
            />

        <Button
            android:id="@+id/id_twoButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="2"
            android:textSize="24sp"
            android:background="@drawable/round_button"/>

        <Button
            android:id="@+id/id_threeButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="24sp"
            android:background="@drawable/round_button"/>

        <Button
            android:id="@+id/id_additionButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="+"
            android:textSize="36sp"
            android:background="@drawable/round_buttonorange"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="111dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/id_cubeButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="x^3"
            android:textSize="16sp"
            android:background="@drawable/round_button_dark_gray" />

        <Button
            android:id="@+id/id_cosButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="cos"
            android:textSize="16sp"
            android:background="@drawable/round_button_dark_gray" />

        <Button
            android:id="@+id/id_eButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="e"
            android:textSize="16sp"
            android:background="@drawable/round_button_dark_gray" />

        <Button
            android:id="@+id/id_fourButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="24sp"
            android:background="@drawable/round_button"/>

        <Button
            android:id="@+id/id_fiveButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="24sp"
            android:background="@drawable/round_button"/>

        <Button
            android:id="@+id/id_sixButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="24sp"
            android:background="@drawable/round_button"/>

        <Button
            android:id="@+id/id_subtractionButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="36sp"
            android:background="@drawable/round_buttonorange"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/id_sqrtButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="√x"
            android:textSize="16sp"
            android:background="@drawable/round_button_dark_gray" />

        <Button
            android:id="@+id/id_tanButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="tan"
            android:textSize="16sp"
            android:background="@drawable/round_button_dark_gray" />

        <Button
            android:id="@+id/id_randButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="RAND"
            android:textSize="16sp"
            android:background="@drawable/round_button_dark_gray" />

        <Button
            android:id="@+id/id_sevenButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:text="7"
            android:textSize="24sp" />

        <Button
            android:id="@+id/id_eightButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:text="8"
            android:textSize="24sp" />

        <Button
            android:id="@+id/id_nineButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:text="9"
            android:textSize="24sp" />

        <Button
            android:id="@+id/id_multiplicationButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_buttonorange"
            android:text="*"
            android:textSize="36sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/id_plusMinusButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="+/-"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="@drawable/round_button_dark_gray" />

        <Button
            android:id="@+id/id_decimalButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="."
            android:textSize="36sp"
            android:textAlignment="center"
            android:background="@drawable/round_button_dark_gray" />

        <Button
            android:id="@+id/id_clearButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:text="C"
            android:textSize="24sp" />

        <Button
            android:id="@+id/id_zeroButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:text="0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/id_equalButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:text="="
            android:textSize="24sp" />

        <Button
            android:id="@+id/id_divisionButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_buttonorange"
            android:text="/"
            android:textSize="36sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/id_answerField"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="220dp"
        android:text="0"
        android:gravity = "bottom|right"
        android:textStyle="bold"
        android:textSize = "52dp"
        app:fontFamily="serif"
        android:textColor="@android:color/white"/>
</RelativeLayout>